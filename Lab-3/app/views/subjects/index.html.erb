<p id="notice"><%= notice %></p>

<h1><%= t('admin.faculty_subjects.subjects') %> </h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('common.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= link_to t('common.show'), subject %></td>
        <td><%= link_to t('common.edit'), edit_subject_path(subject) %></td>
        <td><%= link_to t('common.destroy'), subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<ul class="list-group">
  <li class="list-group-item text-center"><%= link_to t('subjects.new.new_subject'), new_subject_path %></li>
  <li class="list-group-item text-center"><%= link_to t('admin.users.back'), admin_index_path %></li>
</ul>
